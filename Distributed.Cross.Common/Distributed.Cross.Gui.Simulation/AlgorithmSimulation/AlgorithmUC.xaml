<UserControl x:Class="Distributed.Cross.Gui.Simulation.AlgorithmSimulation.AlgorithmUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Distributed.Cross.Gui.Simulation.AlgorithmSimulation"
             mc:Ignorable="d" 
             DataContext="{Binding Source={x:Static local:AlgorithmViewModel.Instance}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel>
            <Button
            Margin="3"
            Height="30"
            Width="100"
            Content="Test trajectory!"
            Command="{Binding TrajectoryTestCommand}"
            ></Button>
            <Button
            Margin="3"
            Height="30"
            Width="100"
            Content="Test collision!"
            Command="{Binding CollisionTestCommand}"
            ></Button>
            
        </StackPanel>

        

    </Grid>
</UserControl>
